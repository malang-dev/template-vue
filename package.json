{
  "name": "@malang-dev/template-vue",
  "version": "1.0.0",
  "description": "Template repository for new TypeScript projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/malang-dev/template-vue"
  },
  "author": {
    "name": "Malang.dev",
    "email": "hello@malang.dev",
    "url": "https://malang.dev/"
  },
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "format": "prettier --write .",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "playwright:install": "playwright install --with-deps",
    "lint": "eslint \"src/**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}\" --fix",
    "lint-staged": "lint-staged",
    "type-check": "vue-tsc --build --force"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@rushstack/eslint-patch": "^1.10.1",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.5.4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vite": "^5.2.7",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.7"
  },
  "lint-staged": {
    "src/**/*.{ts|test.ts}": [
      "eslint --max-warnings 0 \"src/**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}\"",
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-i18n": "9",
    "vue-router": "^4.3.0"
  }
}
